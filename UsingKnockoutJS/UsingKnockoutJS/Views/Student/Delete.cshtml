
@{
    ViewBag.Title = "Delete";
}



<h2>Delete Student</h2>
<h3>Are you sure you want to delete this?</h3>

<div class="form-horizontal">
 
    <hr>
    <div class="form-group">
        <label class="control-label col-md-2" for="FirstName">FirstName</label>
        <div class="col-md-10">
            <span class="text-box single-line" id="FirstName1" name="FirstName" type="text" value="" data-bind="text: FirstName"></span>

        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="LastName">LastName</label>
        <div class="col-md-10">
            <span class="text-box single-line" id="LastName1" name="LastName" type="text" value="" data-bind="text: LastName"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" for="Email">Email</label>
        <div class="col-md-10">
            <span class="text-box single-line" id="Email1" name="Email" type="text" value="" data-bind="text: Email"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="City">City</label>
        <div class="col-md-10">
            <span class="text-box single-line" id="City1" name="City" type="text" value="" data-bind="text: City"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="Country">Country</label>
        <div class="col-md-10">
            <span class="text-box single-line" id="Country1" name="Country" type="text" value="" data-bind="text: Country"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="button" data-bind="click: deleteStudent" value="Delete" class="btn btn-default">
        </div>
    </div>
</div>

<script type="text/javascript">
    var selectedStudent = '@Html.Raw(ViewBag.SelectedStudent)';
</script>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section scripts{
    <script src="~/Scripts/KoScripts/KoDelete.js"></script>
}