
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Email
        </th>
        <th>
            City
        </th>

        <th></th>
    </tr>
    <tbody data-bind="foreach: Students">
        <tr>
            <td data-bind="text: FirstName"></td>
            <td data-bind="text: LastName"></td>
            <td data-bind="text: Email"></td>
            <td data-bind="text: City"></td>
            <td>
                <a data-bind="attr: { 'href': '@Url.Action("Edit", "Student")/' + Id }" class="btn btn-primary">Edit</a> 
                <a data-bind="attr: { 'href': '@Url.Action("Delete", "Student")/' + Id }" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    </tbody>
</table>
@section scripts{

    <script src="~/Scripts/KoScripts/KoList.js"></script>
}
